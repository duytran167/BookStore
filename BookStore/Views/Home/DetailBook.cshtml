@model BookStore.Models.Book
@{
	ViewBag.Title = "DetailBook";
}

<style>
	.gallery-wrap .img-big-wrap img {
		height: 450px;
		width: auto;
		display: inline-block;
		cursor: zoom-in;
	}
	
</style>

<div class="container">
	<br>  <h2>Detail Book</h2>
	<hr>


	<div class="card">
		<div class="row">
			<aside class="col-sm-5 border-right">
				<article class="gallery-wrap">
					<div class="img-big-wrap">
						<div><img src="@Model.ImageUrl"></div>
					</div> <!-- slider-product.// -->
					
				</article> <!-- gallery-wrap .end// -->
			</aside>
			<aside class="col-sm-7">
				<article class="card-body p-5">
					<h3 class="title mb-3">@Model.Title</h3>

					<p class="price-detail-wrap">
						<span class="price h4 text-info">
							<span class="currency"> </span><span class="num">@Model.Category.CategoryName</span> <br /><br />
						</span>
						<span class="price h4 text-success">
							<span class="currency">Author: </span><span class="num">@Model.Author</span><br /><br />
						</span>
						<span class="price h5 text-success">
							<span class="currency">Pages: </span><span class="num">@Model.Pages</span><br /><br />
						</span>
						<span class="price h3 text-warning">
							<span class="currency">US $</span><span class="num">@Model.Price</span>
						</span>

					</p> <!-- price-detail-wrap .// -->
					<dl class="item-property">
						<dt>Description</dt>
						<dd>
							<p>
								@Model.Description
							</p>
						</dd>
					</dl>


					<hr>
					
					
						<hr>
						<a href="@Url.Action( "Checkout", "User", new { id = Model.Id })" class="btn btn-lg btn-primary text-uppercase"> Buy now </a>

				</article> <!-- card-body.// -->
			</aside> <!-- col.// -->
		</div> <!-- row.// -->
	</div> <!-- card.// -->


</div>
